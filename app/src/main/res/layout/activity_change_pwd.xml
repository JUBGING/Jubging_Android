<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/change_pwd_title_tv"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        android:paddingStart="50dp"
        android:text="비밀번호 변경"
        android:fontFamily="@font/regular"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/change_pwd_back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/change_pwd_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/change_pwd_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:src="@drawable/back_black"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/change_pwd_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/change_pwd_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/change_pwd_new_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="새로운 비밀번호"
            android:fontFamily="@font/regular"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/change_pwd_new_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:minHeight="48dp"
            android:paddingStart="5dp"
            android:textSize="17sp"
            android:inputType="textPassword"
            android:fontFamily="@font/regular"
            android:backgroundTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/change_pwd_new_tv" />


        <TextView
            android:id="@+id/change_pwd_check_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/change_pwd_new_et"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            android:text="새로운 비밀번호 확인"
            android:fontFamily="@font/regular"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/change_pwd_check_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:minHeight="48dp"
            android:paddingStart="5dp"
            android:textSize="17sp"
            android:inputType="textPassword"
            android:fontFamily="@font/regular"
            android:backgroundTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/change_pwd_check_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/change_pwd_store_tv"
        android:layout_width="90dp"
        android:layout_height="38dp"
        app:layout_constraintTop_toBottomOf="@id/change_pwd_cl"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="저장"
        android:textColor="@color/white"
        android:fontFamily="@font/regular"
        android:textStyle="bold"
        android:textSize="17sp"
        android:gravity="center"
        android:background="@drawable/round_rectangle_solid_green"/>




</androidx.constraintlayout.widget.ConstraintLayout>