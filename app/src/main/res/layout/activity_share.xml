<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/share_img_cl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <ImageView
            android:id="@+id/share_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/omi"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/share_logo_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:id="@+id/share_data_ll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

//거리
            <TextView
                android:id="@+id/share_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거리"
                android:fontFamily="@font/bold_num"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/share_distance_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/share_distance_data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.00"
                    android:fontFamily="@font/bold_num"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/share_distance_unit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="KM"
                    android:fontFamily="@font/bold_num"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>


//칼로리
            <TextView
                android:id="@+id/share_kcal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="칼로리"
                android:fontFamily="@font/bold_num"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/share_kcal_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/share_kcal_data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="203"
                    android:fontFamily="@font/bold_num"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/share_kcal_unit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="KCAL"
                    android:fontFamily="@font/bold_num"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>

//시간
            <TextView
                android:id="@+id/share_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="시간"
                android:fontFamily="@font/bold_num"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/share_time_data_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:fontFamily="@font/bold_num"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>




//걸음수
            <TextView
                android:id="@+id/share_walk_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="걸음 수"
                android:fontFamily="@font/bold_num"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/share_walk_data_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:fontFamily="@font/bold_num"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/share_weight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/share_weight_ll"
            app:layout_constraintBottom_toTopOf="@id/share_weight_ll"
            android:text="무게"
            android:fontFamily="@font/bold_num"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/share_weight_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_weight_data_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:fontFamily="@font/bold_num"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

//배너
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/share_banner_vp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/share_img_cl"
        app:layout_constraintBottom_toTopOf="@id/share_btn_cl"
        android:layout_marginTop="15dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/share_btn_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/share_banner_vp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        //홈 버튼
        <ImageView
            android:id="@+id/share_home_btn_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:src="@drawable/circle_green"/>

        <ImageView
            android:id="@+id/share_home_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@id/share_home_btn_iv"
            app:layout_constraintBottom_toBottomOf="@id/share_home_btn_iv"
            app:layout_constraintStart_toStartOf="@id/share_home_btn_iv"
            app:layout_constraintEnd_toEndOf="@id/share_home_btn_iv"
            android:src="@drawable/home_white"/>

        // 다운로드 버튼
        <ImageView
            android:id="@+id/share_download_btn_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="@id/share_home_btn_iv"
            app:layout_constraintStart_toEndOf="@id/share_home_btn_iv"
            app:layout_constraintEnd_toStartOf="@id/share_share_btn_iv"
            android:src="@drawable/circle_green"/>

        <ImageView
            android:id="@+id/share_download_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@id/share_download_btn_iv"
            app:layout_constraintBottom_toBottomOf="@id/share_download_btn_iv"
            app:layout_constraintStart_toStartOf="@id/share_download_btn_iv"
            app:layout_constraintEnd_toEndOf="@id/share_download_btn_iv"
            android:src="@drawable/download_white"/>

        // 다운로드 버튼
        <ImageView
            android:id="@+id/share_share_btn_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="@id/share_home_btn_iv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            android:src="@drawable/circle_green"/>

        <ImageView
            android:id="@+id/share_share_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@id/share_share_btn_iv"
            app:layout_constraintBottom_toBottomOf="@id/share_share_btn_iv"
            app:layout_constraintStart_toStartOf="@id/share_share_btn_iv"
            app:layout_constraintEnd_toEndOf="@id/share_share_btn_iv"
            android:src="@drawable/share_white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>