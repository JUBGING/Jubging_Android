<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/myactvitiy_background">
    <TextView
        android:id="@+id/item_myactivity_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_myactivity_cv"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="2022.12.4"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/regular"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_myactivity_cv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_myactivity_date_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="23dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/item_myactivity_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/omi"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:id="@+id/item_myactivity_weight_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_myactivity_cv"
        app:layout_constraintBottom_toTopOf="@id/item_myactivity_time_ll"
        app:layout_constraintStart_toEndOf="@id/item_myactivity_cv"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_myactivity_weight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쓰레기 무게:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_weight_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_weight_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KG"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_myactivity_time_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_myactivity_weight_ll"
        app:layout_constraintBottom_toTopOf="@id/item_myactivity_walk_ll"
        app:layout_constraintStart_toStartOf="@id/item_myactivity_weight_ll"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_myactivity_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_time_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_myactivity_walk_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_myactivity_time_ll"
        app:layout_constraintBottom_toTopOf="@id/item_myactivity_distance_ll"
        app:layout_constraintStart_toStartOf="@id/item_myactivity_weight_ll"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_myactivity_walk_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="걸음 수:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_walk_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_walk_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="걸음"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_myactivity_distance_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_myactivity_walk_ll"
        app:layout_constraintStart_toStartOf="@id/item_myactivity_weight_ll"
        app:layout_constraintBottom_toBottomOf="@id/item_myactivity_cv"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_myactivity_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이동거리:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_distance_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_distance_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KM"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>