<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    >

    <TextView
        android:id="@+id/item_myactivity_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="2022.12.4"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/regular"/>


    <ImageView
        android:id="@+id/item_myactivity_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/item_myactivity_date_tv"
        app:layout_constraintStart_toStartOf="@id/item_myactivity_date_tv"
        android:layout_marginTop="10dp"
        android:src="@drawable/omi"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/item_myactivity_weight_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_myactivity_iv"
        app:layout_constraintBottom_toTopOf="@id/item_myactivity_time_ll"
        app:layout_constraintStart_toEndOf="@id/item_myactivity_iv"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_myactivity_weight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쓰레기 무게:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_weight_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="0"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_weight_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KG"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_myactivity_time_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_myactivity_weight_ll"
        app:layout_constraintBottom_toTopOf="@id/item_myactivity_walk_ll"
        app:layout_constraintStart_toStartOf="@id/item_myactivity_weight_ll"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_myactivity_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_time_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="0:0:0"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_myactivity_walk_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_myactivity_time_ll"
        app:layout_constraintBottom_toTopOf="@id/item_myactivity_distance_ll"
        app:layout_constraintStart_toStartOf="@id/item_myactivity_weight_ll"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_myactivity_walk_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="걸음 수:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_walk_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="0"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_walk_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="걸음"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_myactivity_distance_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_myactivity_walk_ll"
        app:layout_constraintStart_toStartOf="@id/item_myactivity_weight_ll"
        app:layout_constraintBottom_toBottomOf="@id/item_myactivity_iv"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_myactivity_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이동거리:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_distance_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="0"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/item_myactivity_distance_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KM"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/regular"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>