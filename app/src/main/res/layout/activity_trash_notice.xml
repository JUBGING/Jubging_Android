<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/trash_notice_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/trash_trash_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/trash"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/trash_arrow_iv"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:src="@drawable/down_red"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/trash_trashcan_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/trash_can"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/trash_notice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="줍줍이에게 쓰레기를 \n 버려주세요!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trash_notice_btn_tv"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:text="줍줍이 닫기"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/login_text_rounded_rectangle"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>